<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina%></h1>

    <form  method="post" class="default-form">
        <div class="campo">
            <label for="">Nombre</label>
            <input type="text" value="<%=grupo.nombre%>" name="nombre" placeholder="Nombre Grupo">
        </div>
        <div class="campo descripcion">
            <label for="">Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" value="<%=grupo.descripcion%>" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categoria</label>
            <select name="categoriaId">
                <option value="" selected disabled>-- Elige una categoria --</option>
                <% categorias.forEach(categoria => {%>
                    <option value="<%= categoria.id%>" <%=(grupo.categoriaId === categoria.id) ? 'selected': ''%>><%= categoria.nombre%></option>
                <%})%>
            </select>
        </div>

        <div class="campo">
            <label for="">Sitio Web</label>
            <input type="text" name="url" value="<%=grupo.url%>" placeholder="Sitio Web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>