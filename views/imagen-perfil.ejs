<main class="contenedor contenedor-formularios">
    <h1><%= nombrePagina%></h1>

    <form method="post" class="default-form" enctype="multipart/form-data">
        <legend>Sube tu imagen que se mostrara junto a tu nombre y biografia</legend>
        <div class="campo">
            <label for="">Imagen</label>
            <input type="file" name="imagen">
        </div>
        <%if (usuario.imagen){%>
        <div class="campo">
            <label for="">Imagen Actual</label>
            <img src="/uploads/perfiles/<%=usuario.imagen%>" width="200">
        </div>
        <%} else {%>
            <p>No hay imagen actual</p>
        <%}%>
        <div class="campo enviar">
            <input type="submit" value="Subir Imagen" class="btn btn-azul">
        </div>
    </form>
</main>